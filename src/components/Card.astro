---
const { title, url } = Astro.props;

---
<a href={url} class="card">
    <div class="card-icon">
        <slot name="icon" />
    </div>
    <div class="card-body">
        <h2>{ title }</h2>
        <slot />
    </div>
</a>

<style>
    .card {
        display: block;
        text-decoration: none;
        border: 1px solid #ccc;
        border-radius: 8px;
        overflow: hidden;
        transition: box-shadow 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #f5f5f5;
        padding: 1rem;
        font-weight: bold;
    }

    .card-body {
        padding: 1rem;
    }
</style>